package com.xmlphotoalbum.Mp3Buttons{	import flash.display.Sprite;	import flash.display.*;	import flash.events.*;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormat;	import flash.text.AntiAliasType;	import caurina.transitions.*;	public class PlayButton extends Sprite {		public var Player:Sprite;		public var Pause:Sprite;		public var clicked:Number = 0;		public function PlayButton():void {			Player = new Sprite();			Pause  = new Sprite();						addChild(Player);						Player.y = -1;						var playBtn:Sprite = new Sprite();			playBtn.graphics.beginFill(0xffffff);			playBtn.graphics.lineStyle(0, 0xffffff,0, true, LineScaleMode.NORMAL, CapsStyle.SQUARE, JointStyle.ROUND);			playBtn.graphics.moveTo(46,6);			playBtn.graphics.lineTo(54, 11);			playBtn.graphics.lineTo(46,15);			playBtn.graphics.endFill();						Player.x = -35;			Player.addChild(playBtn);			Player.addChild(Pause);						////////Pause Button////////////////////////////////////////////////////						Pause.graphics.beginFill(0xffffff);			Pause.graphics.drawRect(47,7,2,8);			Pause.graphics.drawRect(51,7,2,8);			Pause.graphics.endFill();						playBtn.buttonMode 	   = true;			Pause.buttonMode 	   = true;									var alphaVal:Number = 0.5; 			Pause.alpha         = 0;						playBtn.alpha       = alphaVal;									Player.addEventListener (MouseEvent.MOUSE_OVER,Over);			Player.addEventListener (MouseEvent.MOUSE_OUT,Out);						Pause.addEventListener (MouseEvent.MOUSE_OVER,Over);			Pause.addEventListener (MouseEvent.MOUSE_OUT,Out);						function Over(e:MouseEvent):void {								if(clicked %2 ) {					Tweener.addTween(playBtn, {alpha:0, time:1});					Tweener.addTween(Pause, {alpha:alphaVal, time:1});				}else{					Tweener.addTween(Pause, {alpha:0, time:1});					Tweener.addTween(playBtn, {alpha:1, time:1});				}			}								function Out(e:MouseEvent):void {							if(clicked %2 ) {					Tweener.addTween(playBtn, {alpha:0, time:1});					Tweener.addTween(Pause, {alpha:alphaVal, time:1});				}else{					Tweener.addTween(Pause, {alpha:0, time:1});					Tweener.addTween(playBtn, {alpha:alphaVal, time:1});				}						}						Player.addEventListener(MouseEvent.CLICK, changeToPause);						function changeToPause(e:MouseEvent):void {								clicked ++;								if(clicked %2 ) {					/*Tweener.addTween(playBtn, {alpha:0, time:1});					Tweener.addTween(Pause, {alpha:alphaVal, time:1});*/					trace("ooo");				}							}								}			}	}