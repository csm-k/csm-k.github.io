package com.xmlphotoalbum.Mp3Buttons{	import flash.display.Sprite;	import flash.display.*;	import flash.events.*;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormat;	import flash.text.AntiAliasType;	import caurina.transitions.*;	public class StopButton extends Sprite {		public var Player:Sprite;		public function StopButton():void {			Player = new Sprite();			addChild(Player);			var stopBtn:Sprite = new Sprite();			stopBtn.graphics.beginFill(0xffffff);			stopBtn.graphics.drawRoundRect(32, 6, 8, 8,2);			stopBtn.graphics.endFill();						stopBtn.x = -8;			Player.addChild(stopBtn);			stopBtn.buttonMode 	   = true;									var alphaVal:Number = 0.5; 						stopBtn.alpha = alphaVal;						stopBtn.addEventListener ('mouseOver', function() {				Tweener.addTween(stopBtn, {alpha:1, time:1});			});						stopBtn.addEventListener ('mouseOut', function() {				Tweener.addTween(stopBtn, {alpha:alphaVal, time:1});			});					}			}	}