package com.xmlphotoalbum{	import flash.ui.ContextMenu;	import flash.ui.ContextMenuItem;	import flash.ui.ContextMenuBuiltInItems;	import flash.events.ContextMenuEvent;	import flash.events.ContextMenuEvent;	import flash.display.Sprite;	import flash.net.URLRequest;	import flash.net.URLVariables;	import flash.net.navigateToURL;	import flash.display.Stage;	import flash.display.StageAlign;	import flash.display.StageScaleMode;	import flash.events.Event;	import flash.events.IEventDispatcher;	public class RightClick extends Sprite {		private var RightClickMenu:ContextMenu = new ContextMenu();		private var menu1:ContextMenuItem;		private var menu2:ContextMenuItem;		private var menu3:ContextMenuItem;		private var menu4:ContextMenuItem;		private var url:String;		public function RightClick() {			RightClickMenu.hideBuiltInItems();			menu1         = new ContextMenuItem("XmlPhotoAlbum");			menu2         = new ContextMenuItem("written by Selcuk Artut and Alp Tugan");			menu3         = new ContextMenuItem("Save Media");			RightClickMenu.customItems.push(menu1);			RightClickMenu.customItems.push(menu2);			RightClickMenu.customItems.push(menu3);			this.addEventListener(Event.ADDED_TO_STAGE,attachContextMenu);			menu1.addEventListener(ContextMenuEvent.MENU_ITEM_SELECT, goToSite);			menu3.addEventListener(ContextMenuEvent.MENU_ITEM_SELECT, saveImage);			function goToSite(e:ContextMenuEvent):void {				url = "http://www.xmlphotoalbum.com";				var request:URLRequest = new URLRequest(url);				navigateToURL(request, '_blank');			}		}		private function attachContextMenu(e:Event):void {			parent.contextMenu = RightClickMenu;						stage.scaleMode       = StageScaleMode.NO_SCALE;			stage.align           = StageAlign.BOTTOM_LEFT;			stage.addEventListener(Event.RESIZE, reloadScene);		}		private function reloadScene(event:Event):void {			this.x = 0;			this.y = stage.stageHeight-36;		}				private function saveImage(event:ContextMenuEvent):void {			stage.dispatchEvent(new Event("saveme"));		}	}}