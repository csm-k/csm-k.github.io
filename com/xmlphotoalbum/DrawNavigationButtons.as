package com.xmlphotoalbum{	import flash.display.Sprite;	import flash.display.*;	import flash.events.*;	public class DrawNavigationButtons extends Sprite {				public var NavBut:Sprite;				public function DrawNavigationButtons(		                                 width:Number,		                                 height:Number,		                                 color:Number,										 ButAlpha:Number):void {			NavBut = new Sprite();			addChild(NavBut);			var rect:Sprite = new Sprite();			rect.graphics.beginFill(color);			rect.graphics.drawRect(x, y, width, height);			rect.graphics.endFill();			NavBut.addChild(rect);			NavBut.alpha = ButAlpha;			var Arrow:Sprite = new Sprite();						Arrow.graphics.lineStyle(2.5, 0xffffff,ButAlpha, true, LineScaleMode.NORMAL, CapsStyle.SQUARE, JointStyle.MITER);			Arrow.graphics.moveTo(x + width/2.3,y + rect.height/3.5);			Arrow.graphics.lineTo(x + width/1.5, y + rect.height/2);			Arrow.graphics.lineTo(x + width/2.3,y + rect.height-8);			addChild(Arrow);								}	}}